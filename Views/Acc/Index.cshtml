@model GASTOSMVC.Models.Usuario
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Tls/utls.js"></script>
    <script src="~/Tls/Tls.js"></script>
    <title>Acceso</title>
    @if (@Model.nPaso == 1)
    {
        <script type="text/javascript">
            alert("Favor de verificar su usuario y contraseña");
        </script>
    }
</head>
<body>
    <form name="FrmAcc" id="FrmAcc" method="post" action="~/Acc/Valida" target="_self">
        <div class="container">
            <h2>Bienvenidos</h2>
            <div class="form-group">
                <label for="Usuario">Usuario:</label>
                <input type="text" name="txtUsr" id="txtUsr" class="form-control" placeholder="Correo Electrónico" value="" />
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" name="txtContra" id="txtContra" class="form-control" placeholder="Contraseña" value="" />
            </div>
            <input type="hidden" id="hdVal" name="hdVal" value="" />
            <input type="submit" name="btnAcc" id="btnAcc" class="btn btn-default" value="Accesar" onclick="return fnValidar();" />
        </div>
    </form>
</body>
</html>
